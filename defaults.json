{
  "nodemon": {
    "script": "./index.js",
    "watch": "./",
    "ext": "js json",
    "ignore": ["./assets/scripts", "./public/assets"]
  },
  "livereload": {
    "enabled": true
  },
  "paths": {
    "assets": {
      "styles": "./assets/styles",
      "scripts": "./assets/scripts",
      "views": "./assets/views",
      "images": "./assets/images",
      "fonts": "./assets/fonts",
      "build": "./public/assets"
    },
    "views": "./views"
  },
  "ext": {
    "images": ["jpg", "png", "gif"],
    "fonts": ["eot", "woff", "ttf", "svg"]
  }
}
