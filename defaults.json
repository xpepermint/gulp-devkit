{
  "serve": {
    "execFile": "./index.js",
    "watchPaths": ["./index.js", "./bin/**/*", "./app/**/*", "./views/**/*", "./public/**/*"]
  },
  "assets": {
    "stylesPath": "./assets/styles",
    "scriptsPath": "./assets/scripts",
    "viewsPath": "./assets/views",
    "imagesPath": "./assets/images",
    "imagesExt": ["jpg", "png", "gif"],
    "fontsPath": "./assets/fonts",
    "fontsExt": ["eot", "woff", "ttf", "svg"],
    "buildPath": "./public/assets"
  }
}
